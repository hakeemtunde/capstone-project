<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.MainActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/main_toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimenMainActionBarHeight"

        android:background="@color/colorPrimary"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/toolbar_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/strToolbarDate"
                android:textColor="@color/colorText"
                android:textSize="32sp" />

<!--            <TextView-->
<!--                android:id="@+id/toolbar_time"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:text="@string/strToolbarTime"-->
<!--                android:textColor="@color/colorLightPrimary"-->
<!--                android:textSize="22sp" />-->

        </LinearLayout>
    </android.support.v7.widget.Toolbar>


        <include
            android:id="@+id/buttonpanel"
            layout="@layout/main_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/main_toolbar"
            android:layout_marginTop="30dp" />

        <include
            layout="@layout/layout_banner_admob"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"

            />


    </RelativeLayout>


