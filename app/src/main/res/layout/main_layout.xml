<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="0dp"
    android:padding="0dp">

    <android.support.v7.widget.CardView
        android:id="@+id/cv_category_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dimenMainLayoutcardViewMarginTop">

        <TextView
            android:id="@+id/category_btn"
            android:layout_width="@dimen/dimenMainLayoutButtonWidth"
            android:layout_height="wrap_content"
            android:text="@string/strCategoryButtonText"
            android:textSize="@dimen/dimenMainLayoutButtonTextSize"
            android:gravity="center_horizontal" />
    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:id="@+id/cv_stock_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        android:layout_below="@id/cv_category_btn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dimenMainLayoutcardViewMarginTop">

        <TextView
            android:id="@+id/stock_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="@string/strStockButtonText"
            android:textSize="@dimen/dimenMainLayoutButtonTextSize"
            android:gravity="center_horizontal"/>

    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:id="@+id/cv_customer_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        android:layout_below="@id/cv_stock_btn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dimenMainLayoutcardViewMarginTop">

        <TextView
            android:id="@+id/customer_btn"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"


            android:text="@string/strCustomerButtonText"
            android:textSize="@dimen/dimenMainLayoutButtonTextSize"
            android:gravity="center_horizontal"/>


    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:id="@+id/cv_daily_transaction_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        android:layout_below="@id/cv_customer_btn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dimenMainLayoutcardViewMarginTop">

        <TextView
            android:id="@+id/daily_transaction_btn"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"


            android:text="@string/strDailyTransactionButtonText"
            android:textSize="@dimen/dimenMainLayoutButtonTextSize"
            android:gravity="center_horizontal"/>

    </android.support.v7.widget.CardView>


</RelativeLayout>