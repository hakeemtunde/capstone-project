<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_toolbar"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimenMainActionBarHeight"
    android:background="@color/colorPrimary">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/toolbar_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/strToolbarDate"
            android:textColor="@color/colorText"
            android:textSize="32sp" />

        <TextView
            android:id="@+id/toolbar_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/strToolbarTime"
            android:textColor="@color/colorLightPrimary"
            android:textSize="22sp" />

    </LinearLayout>


</android.support.v7.widget.Toolbar>