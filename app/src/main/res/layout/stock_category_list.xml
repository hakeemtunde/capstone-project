<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <TextView
        android:id="@+id/category_name_tv"
        android:layout_width="200dp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/stock_category_total_tv"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/category_name_tv"
        android:layout_toRightOf="@+id/category_name_tv" />

    <ImageView
        android:id="@+id/stock_category_edit_btn"
        android:contentDescription="@string/edit"
        android:layout_marginLeft="30dp"
        android:src="@drawable/ic_edit_black_24dp"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_toEndOf="@+id/stock_category_total_tv"
        android:layout_toRightOf="@+id/stock_category_total_tv" />

    <ImageView
        android:id="@+id/stock_category_del_btn"
        android:contentDescription="@string/delete"
        android:src="@drawable/ic_delete_black_24dp"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_toEndOf="@+id/stock_category_edit_btn"
        android:layout_toRightOf="@+id/stock_category_edit_btn"
        android:layout_alignParentRight="true"
        />

</RelativeLayout>
